<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CookMaster" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gris_blavos</item>
        <item name="colorPrimaryVariant">@color/gris_fosc</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gris_fosc</item>
        <item name="colorSecondaryVariant">@color/gris_realfosc</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CookMaster.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CookMaster.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CookMaster.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="boto_dia">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/boto_dia</item>
        <item name="android:textColor">@color/gris_fosc</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="boto_dinar">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/boto_dinar</item>
        <item name="android:textColor">@color/gris_fosc</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="boto_sopar" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/boto_sopar</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="boto_millora" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@drawable/boto_millora</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="titol">
        <item name="android:textColor">@color/titol_lletres</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>